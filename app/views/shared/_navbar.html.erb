<!-- left side of navbar for the logo -->
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="navbar-logo-with-text">
    <%= link_to "/", class: "navbar-brand" do %>
      <i class="fas fa-comments-dollar"></i>
      <font style="font-size: 35px; font-weight: 200; font-color: ">Air</font><font style="font-size: 35px; font-weight: 700;" color="#7F46E7">Loan</font>
    <% end %>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

<!-- right side of the logo for navigation and menu -->
<!-- menu that changes if user is logged in or not -->
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item nav-btn">
          <%= link_to "Search loans", offers_path, class: "nav-link" %>
        </li>
        <li class="nav-item nav-btn">
          <%= link_to "Create a loan", new_offer_path, class: "nav-link" %>
        </li>
      <% else %>
        <li class="nav-item nav-btn">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item nav-btn">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
        </li>
      <% end %>

<!-- dropdown menu that changes if user is logged in or not -->
      <li class="nav-item my-auto">
        <div class="dropdown">
          <i class="fas fa-bars" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
            <%= link_to "Dashboard", "/", class: "dropdown-item" %>
            <% if user_signed_in? %>
              <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            <% else %>
              <%= link_to "Search loans", offers_path, class: "dropdown-item" %>
              <%= link_to "Create a loan", new_offer_path, class: "dropdown-item" %>
            <% end %>
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>
